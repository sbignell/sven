html
  head
    block head
      title Simon is awake.
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='styles/vendor.min.css')
    link(rel='stylesheet', href='styles/public.min.css')
    block neck
  body
    div.navbar.navbar-default.navbar-fixed-top
      div.container
        div.navbar-header
          a.navbar-brand(href='/')
            img.navbar-logo(src='media/logo-symbol-64x64.png')
            span.navbar-brand-label Simon
          button.navbar-toggle.collapsed(data-toggle='collapse', data-target='.my-navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
        div.navbar-collapse.my-navbar-collapse.collapse
          ul#public-menu.nav.navbar-nav
            li: a#gotoHome(href='') Home
            li: a#gotoAbout(href='') About
            li: a#gotoContact(href='') Contact
            li: a#gotoSignup(href='') Sign Up
            //ul.nav.navbar-nav.navbar-right
            li.pull-right: a#gotoLogin(href='')
              i.fa.fa-user
              |  Sign In

    div.page
      div.container
        div#home
          block home
        div#about
          block about
        div#contact
          block contact
        div#login
          block login
        div#signup
          block signup          

    div.footer
      div.container
        span.copyright.pull-right
        ul.links
          li: a(href='/') Home
          li: a(href='/contact/') Contact
        div.clearfix

    div.ajax-spinner
      img(src='media/ajax-pulse.gif')

    //if lte IE 9
      script(src='scripts/ie-sucks.min.js')
    script(src='scripts/vendor.min.js')
    script(src='scripts/public.min.js')
